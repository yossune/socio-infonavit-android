<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Socio_infonavit_android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/launcher</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Socio_infonavit_android.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Socio_infonavit_android.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Socio_infonavit_android.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- línea inferior -->
        <item name="boxStrokeColor">@color/black</item>
        <!-- el color de relleno, (por defecto es colorOnSurface)-->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- el hint cuando el campo está vacio y sin foco-->
        <item name="android:textColorHint">@color/black</item>
        <!-- el hint cuando se convierte en etiqueta flotante-->
        <item name="hintTextColor">@color/launcher</item>
    </style>
</resources>